<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>
    
    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity DeclarationAnnuelle.
    -->
    <changeSet id="20190403192328-1" author="jhipster">
        <createTable tableName="declaration_annuelle">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="annee" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="date_paiement" type="date">
                <constraints nullable="true" />
            </column>

            <column name="numero_quittance" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="montant_chiffre_affaire_ht" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_chiffre_affaire_export" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_chiffre_affaire_impot" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_chiffre_affaire_ttc" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_resultat_comptable" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_deduction_commune" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_autre_deduction" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_base_imposable" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_impot_liquide" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_acompte_provisionnel" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_retenue_source" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="montant_net_a_paye" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="fiche_client_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
    </changeSet>

    <changeSet id="20190403192328-2" author="salim">
        <addColumn tableName="declaration_annuelle">
            <column name="type_declaration" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20190403192328-3" author="salim">
        <renameColumn tableName="declaration_annuelle"
                      oldColumnName="montant_chiffre_affaire_impot"
                      newColumnName="montant_chiffre_affaire_local"/>

        <renameColumn tableName="declaration_annuelle"
                      oldColumnName="montant_deduction_commune"
                      newColumnName="montant_resultat_fiscal"/>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
